button
  cursor: pointer

  [data-atoms="app"] section &
    border-radius: BORDER_RADIUS
    background-color: BUTTON
    color: #999

    & > abbr
      // text-transform: uppercase
      font-weight: 300

    &:not([disabled])
      box-shadow 0em -0.185rem 0em rgba(0, 0, 0, 0.1) inset
      transition: opacity 0.25s ease, background-color 0.25s ease, color 0.25s ease, box-shadow 0.25s ease

      &:hover
        background-color: darken(BUTTON, 20%)
        color: #fff
      &:active
        background-color: darken(BUTTON, 40%)
        box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.1) inset

      &.accept
        background-color: ACCEPT
        &:hover
          background-color: darken(ACCEPT, 20%)
        &:active
          background-color: darken(ACCEPT, 30%)
      &.cancel
        background-color: CANCEL
        &:hover
          background-color: darken(CANCEL, 15%)
        &:active
          background-color: darken(CANCEL, 30%)
      &.warning
        background-color: WARNING
        &:hover
          background-color: darken(WARNING, 15%)
        &:active
          background-color: darken(WARNING, 30%)
      &.accept, &.cancel, &.warning
        color: #fff

    &[disabled]
      & > abbr, & .icon
        opacity: 0.35
