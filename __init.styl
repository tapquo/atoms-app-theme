@import "__vendor.styl"

/* ------------------------- COLORS ------------------------- */
THEME                   = #6441a5
BACKGROUND              = #F4F4F4
DARK                    = #2f2f2f
WHITE                   = #fff
BUTTON                  = #EBEBEB
CANCEL                  = #e74c3c
ACCEPT                  = #2ecc71
WARNING                 = #edba22

/* ----------------------- DIMENSIONS ----------------------- */
ASIDE_WIDTH             = 256px

/* -------------------------- FORM -------------------------- */
FORM_COLOR              = darken(#e5e5e5, 10%)
FORM_BORDER             = 2px
BORDER_RADIUS           = 0.2rem

/* ------------------------ ANIMATION ----------------------- */
ANIMATION_DURATION      = 450ms
ANIMATION_STEPS         = 15
ANIMATION_EASE          = cubic-bezier(0.645, 0.045, 0.355, 1.000)

/* -------------------------- FONT -------------------------- */
FONT_SIZE_TINY          = 0.8rem
FONT_SIZE_LABEL         = 0.85rem
FONT_SIZE_SMALL         = 0.9rem
FONT_SIZE_NORMAL        = 1.0rem
FONT_SIZE_BIG           = 1.2rem
