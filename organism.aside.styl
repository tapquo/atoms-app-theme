[data-atoms=app] > aside
  background: DARK
  width: ASIDE_WIDTH

  vendor(animation-duration, ANIMATION_DURATION)
  vendor(animation-timing-function, ANIMATION_EASE)
  &.active
    &[data-state="in"]
      z-index: 0
      &:not(.right)
        vendor(animation-name, aside-in)
      &.right
        vendor(animation-name, aside-in-right)
    &[data-state="out"]
      z-index: -1
      &:not(.right)
        vendor(animation-name, aside-in)
      &.right
        vendor(animation-name, aside-in-right)
      vendor(animation-direction, reverse)
      vendor(animation-fill-mode, forwards)

  & [data-organism-header]
    background-color: darken(DARK, 10%)

WIDTH_FOR_MOBILE = 480px
@media only screen  and (max-width: WIDTH_FOR_MOBILE)
     , only screen and (max-device-width: WIDTH_FOR_MOBILE) and (orientation: portrait)
     , only screen and (max-device-height: WIDTH_FOR_MOBILE) and (orientation: landscape)

  TRANSLATE = -25%
  @keyframes aside-in
    0%
      transform: translateX(TRANSLATE)
    100%
      transform: translateX(0)

  @keyframes aside-in-right
    0%
      transform: translateX(-(TRANSLATE))
    100%
      transform: translateX(0)
